extends ../layout

block content
  form#Umenu
    input(type="button")
  h2 Hi! #{user.username}

  ul#joinLiveLists
    - each live in lives
      li
        a(href="/live/#{live.live_id}")
          .liveImg
            img(src="/images/live01.jpg", alt="LiveImg")
          .listBg
          h3.liveTitle #{live.title}
          .liveInfo
            .place
              span.glyphicon.glyphicon-map-marker
              h4 #{live.place}
            .time
              span.glyphicon.glyphicon-calendar
              h4 #{live.date}
          
        

  a(href="mypage/joinLives") lives

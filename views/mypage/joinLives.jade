extends ../layout

block content
  h2 Hi! #{user.username}
  
  h3 参加できるライブ
  table
    tr
      th live_id
      th title
      th cast
      th date
      th address
      th place
    - each live in lives
      tr
        td #{live.live_id}
        td #{live.title}
        td #{live.cast}
        td #{live.date}
        td #{live.address}
        td #{live.place}
  - each live in lives
    a(href="joinLives/join/#{live.live_id}") #{live.title}

  a(href="/mypage") 戻る
